<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginFragment"
    android:orientation="vertical">

    <!--header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_arrow_back_ios_new_24"></ImageButton>
        </LinearLayout>

    </LinearLayout>

    <!--body-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_gravity="bottom"
        android:background="#c7c7c7"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <Button
                    android:id="@+id/btn_car"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Car"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:backgroundTint="#F1C50E"
                    android:paddingVertical="10dp"></Button>
                <Button
                    android:id="@+id/btn_bus"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="bus"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:backgroundTint="#F1C50E"
                    android:paddingVertical="10dp"></Button>
                <Button
                    android:id="@+id/btn_truck"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text="Truck"
                    android:textColor="@color/black"
                    android:textSize="20dp"

                    android:backgroundTint="#F1C50E"
                    android:paddingVertical="10dp"></Button>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pricing table"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"></TextView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pricing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

    <!--footer-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">


                <Button
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:text="Home"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:drawableTop="@drawable/ic_baseline_home_24"
                    android:backgroundTint="@color/white"></Button>

                <Button
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:text="about us"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:drawableTop="@drawable/ic_baseline_supervised_user_circle_24"
                    android:backgroundTint="@color/white"></Button>

                <Button
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:text="User"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:drawableTop="@drawable/ic_baseline_notifications_24"
                    android:backgroundTint="@color/white"></Button>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="User"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:drawableTop="@drawable/ic_baseline_account_circle_24"
                    android:backgroundTint="@color/white"></Button>

            </LinearLayout>
    </LinearLayout>


</LinearLayout>