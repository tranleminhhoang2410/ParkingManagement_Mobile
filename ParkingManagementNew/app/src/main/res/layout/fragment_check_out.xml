<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.navigation_check_out"
        android:orientation="vertical">

        <!--header-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/logo"
                android:layout_marginLeft="25dp"></ImageView>

            <Button
                android:id="@+id/btn_log_in_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="175dp"></Button>

        </LinearLayout>

        <!--body-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/parking_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="75dp"
                android:layout_marginTop="25dp"
                android:paddingBottom="25dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_typeImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_car"
                        android:background="@color/default_yellow"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="35dp"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginVertical="25dp"></ImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/iv_lotId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A1"
                            android:gravity="center"
                            android:textSize="40dp"
                            android:textStyle="bold"
                            android:layout_marginTop="25dp"></TextView>
                        <TextView
                            android:id="@+id/iv_vehicleId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A12-345678"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_marginTop="25dp"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginHorizontal="25dp"></View>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="Check in time:"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>
                    <TextView
                        android:id="@+id/iv_checkInTime"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="12/07/2021 10:22:000"
                        android:textSize="20dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="Check out time:"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>
                    <TextView
                        android:id="@+id/iv_checkOutTime"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="12/07/2021 10:22:000"
                        android:textSize="20dp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="Parking fee:"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>
                    <TextView
                        android:id="@+id/iv_totalPaid"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:text="100.000 VND"
                        android:textSize="20dp"></TextView>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_checkOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/default_yellow"
                    android:text="Check Out"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="10dp"></Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't know parking price?"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"></TextView>
                    <Button
                        android:id="@+id/btn_toPricing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="see here!"
                        android:backgroundTint="@color/default_yellow"
                        android:textSize="10dp"></Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>