<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.navigation_check_in"
        android:orientation="vertical">

        <!--header-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/logo"
                android:layout_marginLeft="25dp"></ImageView>

            <Button
                android:id="@+id/btn_log_in_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="175dp"></Button>

        </LinearLayout>

        <!--body-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/parking_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="75dp"
                android:layout_marginTop="25dp"
                android:paddingBottom="25dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_typeImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_car"
                        android:background="@color/default_yellow"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="35dp"
                        android:layout_marginHorizontal="25dp"
                        android:layout_marginVertical="25dp"></ImageView>
                    <TextView
                        android:id="@+id/iv_lotId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="A1"
                        android:gravity="center"
                        android:textSize="40dp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginHorizontal="25dp"></View>

                <TextView
                    android:id="@+id/tv_choose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose your vehicle: "
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="10dp"
                    android:textSize="20dp"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_selectedVehicleId"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="25dp"></TextView>
                    <Spinner
                        android:id="@+id/sp_vehicleId"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textSize="20dp"></Spinner>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_checkIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/default_yellow"
                    android:text="Check in"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginVertical="10dp"></Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't know parking price?"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"></TextView>
                    <Button
                        android:id="@+id/btn_toPricing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="see here!"
                        android:backgroundTint="@color/default_yellow"
                        android:textSize="10dp"></Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>